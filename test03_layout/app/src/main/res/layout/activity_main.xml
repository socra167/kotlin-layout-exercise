<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="9"
    android:layout_column="5"
    android:padding="5dp">

    <TableRow>

        <EditText
            android:id="@+id/edt1"
            android:hint="숫자1 입력"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="5"
            android:layout_weight="1" />
    </TableRow>

    <TableRow>

        <EditText
            android:id="@+id/edt2"
            android:hint="숫자2 입력"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="5"
            android:layout_weight="1" />
    </TableRow>

    <TableRow android:minHeight="60dp">

        <Button
            android:id="@+id/num1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/num2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="20dp" />

        <Button
            android:id="@+id/num3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="20dp" />

        <Button
            android:id="@+id/num4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="20dp" />

        <Button
            android:id="@+id/num5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="20dp" />
    </TableRow>

    <TableRow android:minHeight="60dp">


        <Button
            android:id="@+id/num6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="20dp" />

        <Button
            android:id="@+id/num7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="20dp" />

        <Button
            android:id="@+id/num8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="20dp" />

        <Button
            android:id="@+id/num9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="20dp" />

        <Button
            android:id="@+id/num0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="20dp" />
    </TableRow>

    <TableRow android:minHeight="80dp">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_span="5"
            android:layout_weight="1"
            android:text="더하기"
            android:textSize="20dp" />
    </TableRow>

    <TableRow android:minHeight="80dp">

        <Button
            android:id="@+id/btnSub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_span="5"
            android:layout_weight="1"
            android:text="빼기"
            android:textSize="20dp" />
    </TableRow>

    <TableRow android:minHeight="80dp">

        <Button
            android:id="@+id/btnMul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_span="5"
            android:layout_weight="1"
            android:text="곱하기"
            android:textSize="20dp" />
    </TableRow>

    <TableRow android:minHeight="80dp">

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_span="5"
            android:layout_weight="1"
            android:text="나누기"
            android:textSize="20dp" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/result"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_span="5"
            android:text="계산 결과 :"
            android:textSize="30dp"
            android:textColor="#FF1100"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </TableRow>
</TableLayout>